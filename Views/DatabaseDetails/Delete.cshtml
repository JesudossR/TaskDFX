@model DolphinFx.Models.DatabaseDetail

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="details-container">
    <h4>DatabaseDetail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            DataSource
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Datasource)
        </dd>
        <dt class="col-sm-2">
            User Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class="col-sm-2">
            Password
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            Client Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.ClientName)
        </dd>
        <dt class="col-sm-2">
            Environment Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Environments.EnvironmentName)
        </dd>
        <dt class="col-sm-2">
            Application Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Application.ApplicationName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DbId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </form>
</div>
