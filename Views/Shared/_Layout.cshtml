<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DolphinFx</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DolphinFx.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    @RenderSection("Styles", required: false)

    <style>
        .active-link {
            background: linear-gradient(135deg, #a2c2e6, #e4c1f9);
            color: black !important;
            border-radius: 5px;
        }

        body {
            background: linear-gradient(135deg, #a2c2e6, #e4c1f9);
            overflow-x: hidden;
        }

        /* Sidebar Styling */
        .navbar {
            flex-direction: column;
            width: 200px;
            position: fixed;
            height: 100%;
            background-color: #ffffff;
            border-right: 1px solid #e5e5e5;
            transition: width 0.3s ease;
        }

        .navbar.collapsed {
            width: 60px;
        }

        .navbar.collapsed .nav-link .link-text {
            display: none;
        }

        .navbar.collapsed .nav-link i {
            font-size: 1.5rem;
            margin-right: 0;
        }

        .navbar.collapsed #hamburgerIcon {
            margin: 0 auto;
        }

        /* Container adjustment based on sidebar width */
        .container {
            margin-left: 200px;
            transition: margin-left 0.3s ease;
        }

        .container.collapsed {
            margin-left: 60px;
        }

        /* Hamburger icon */
        #hamburgerIcon {
            cursor: pointer;
            padding: 10px;
                border-radius:5px;
              background: linear-gradient(135deg, #a2c2e6, #e4c1f9);
            margin-left: 120px;
        }

        .hamburger-bar {
            width: 25px;
            height: 3px;
            background-color: #000;
            margin: 5px 0;
            transition: all 0.3s ease;
        }

        /* On hover effect for better feedback */
        #hamburgerIcon:hover .hamburger-bar {
            background-color: #007bff;
        }

        /* Additional styling for other elements */
        .navbar-nav .nav-item {
            width: 100%;
        }

        .navbar-nav .nav-link {
            text-align: left;
            padding: 10px 7px;
        }

        .nav-link i {
            margin-right: 10px;
            font-size: 1.25rem;
        }

        .link-text {
            transition: opacity 0.3s ease;
        }

    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-toggleable-sm navbar-light bg-dark text-white border-bottom box-shadow mb-3" id="sidebar">
            <div class="container-fluid">
                <!-- Hamburger Icon -->
                <div id="hamburgerIcon">
                    <div class="hamburger-bar"></div>
                    <div class="hamburger-bar"></div>
                    <div class="hamburger-bar"></div>
                </div>

                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" style="margin-top: 17px;">
                            <i class="fas fa-tachometer-alt"></i>
                            <span class="link-text" >Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Clients" asp-action="Index">
                            <i class="fas fa-users"></i>
                            <span class="link-text">Client</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Teams" asp-action="Index">
                            <i class="fas fa-users-cog"></i>
                            <span class="link-text">Team</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Applications" asp-action="Index">
                            <i class="fas fa-th-large"></i>
                            <span class="link-text">Application</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Environments" asp-action="Index">
                            <i class="fas fa-server"></i>
                            <span class="link-text">Environment</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="UserRoles" asp-action="Index">
                            <i class="fas fa-user-tag"></i>
                            <span class="link-text">User Role</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="ApplicationDetails" asp-action="Index">
                            <i class="fas fa-info-circle"></i>
                            <span class="link-text">Application Detail</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="DatabaseDetails" asp-action="Index">
                            <i class="fas fa-database"></i>
                            <span class="link-text">Database Detail</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container" id="mainContent">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            // Toggle sidebar visibility
            $("#hamburgerIcon").click(function () {
                $("#sidebar").toggleClass("collapsed");
                $("#mainContent").toggleClass("collapsed");
            });

            // Apply 'active-link' class to the current clicked link
            $(".nav-link").click(function () {
                $(".nav-link").removeClass("active-link");
                $(this).addClass("active-link");
            });

            // Handle the active link on page load based on current URL
            const currentUrl = window.location.href;
            $(".nav-link").each(function () {
                if (this.href === currentUrl) {
                    $(this).addClass("active-link");
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
