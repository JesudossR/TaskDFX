@model DolphinFx.Models.ApplicationDetails

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="details-container">
    <h4>ApplicationDetails</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Client Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.ClientName)
        </dd>
        <dt class="col-sm-2">
            Environment Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Environments.EnvironmentName)
        </dd>
        <dt class="col-sm-2">
            Application Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Applications.ApplicationName)
        </dd>
        <dt class="col-sm-2">
            Link
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Link)
        </dd>
        <dt class="col-sm-2">
            Path
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Path)
        </dd>
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User)
        </dd>
        <dt class="col-sm-2">
            User Role
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserRole.Role)
        </dd>
        <dt class="col-sm-2">
            Password
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </form>
</div>
