@model DolphinFx.Models.Team

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Team Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeamName)
        </dd>
        <dt class = "col-sm-2">
            Team Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeamDescription)
        </dd>
